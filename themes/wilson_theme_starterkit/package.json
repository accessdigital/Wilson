{
  "name": "wilson_theme_starterkit",
  "version": "1.0.0",
  "description": "Packages required for the Wilson Theme Starterkit.",
  "config": {
    "stylesSrc": "./src/sass",
    "stylesDist": "./dist/css",
    "scriptsSrc": "./src/js",
    "scriptsDist": "./dist/js"
  },
  "scripts": {
    "stylelint": "stylelint $npm_package_config_stylesSrc/**/**/*.scss --config .stylelintrc",
    "sass": "sass $npm_package_config_stylesSrc:$npm_package_config_stylesDist",
    "postcss": "postcss -r $npm_package_config_stylesDist/**/**/*.css",
    "eslint": "eslint $npm_package_config_scriptsSrc",
    "babel": "babel $npm_package_config_scriptsSrc --out-dir $npm_package_config_scriptsDist",
    "build:styles": "npm run stylelint && npm run sass && npm run postcss",
    "build:scripts": "npm run eslint && npm run babel",
    "build": "npm run build:styles && npm run build:scripts",
    "build:dist": "cross-env NODE_ENV=production BABEL_ENV=production npm run build",
    "watch:styles": "onchange -p 100 $npm_package_config_stylesSrc -- npm run build:styles",
    "watch:scripts": "onchange -p 100 $npm_package_config_scriptsSrc -- npm run build:scripts",
    "dev": "concurrently \"npm:watch:styles\" \"npm:watch:scripts\""
  },
  "devDependencies": {
    "@babel/cli": "^7.17.3",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "autoprefixer": "^10.4.2",
    "babel-preset-minify": "^0.5.1",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.17",
    "eslint": "^8.8.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "onchange": "^7.1.0",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^6.2.0",
    "sass": "^1.43.3",
    "stylelint": "^14.0.0",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-config-standard-scss": "^2.0.0",
    "stylelint-scss": "^4.0.0",
    "tailwind-css-variables": "^3.0.1",
    "tailwindcss": "^2.2.17",
    "tailwindcss-children": "^2.1.0"
  },
  "dependencies": {}
}
