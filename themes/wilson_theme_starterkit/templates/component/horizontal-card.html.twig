{% set classes = [
  'relative',
  'block',
  'w-full',
  'flex',
  'flex-row',
  link_url ? 'group' : '',
] %}

<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}

  {% if image %}
    <div class="rounded-lg overflow-hidden relative w-3/6 max-w-2xs mr-8">
      <div class="group-hover:scale-110 transition-transform duration-300 h-full heir:!w-full heir:!h-full heir-img:object-cover">
        {{ image }}
      </div>
    </div>
  {% endif %}

  <div class="flex flex-col flex-grow w-3/6 min-h-48 md:min-h-64 py-2">
    {% if pre_header %}
      <p class="uppercase font-semibold tracking-wider text-xs mt-0 mb-2">
        {{ pre_header }}
      </p>
    {% endif %}

    {% if headline %}
      <h3 class="font-medium text-xl mt-0 -mb-2">{{ headline }}</h3>
    {% endif %}

    {% if caption %}
      <p class="text-sm mb-0">{{ caption }}</p>
    {% endif %}

    {% if link_url %}
      <p class="mb-0">
        <a href="{{ link_url }}" class="after:absolute after:inset-0 border-b-0 font-semibold">{{ link_text }} <span class="inline-block group-hover:translate-x-2 transition-transform duration-300">&#8594;</span></a>
      </p>
    {% endif %}
  </div>
</div>
